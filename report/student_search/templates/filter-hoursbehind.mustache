{{!
    @template assessfreqreport_student_search/filter-hoursbehind

    This template renders the day range selector for the timeline view.

    Example context (json):
    {}
}}
<div id="assessfreqreport-student-search-hoursbehind" data-region="hoursbehind-filter" class="mr-3">
    <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{# str }} filter:hoursbehind, assessfreqreport_student_search {{/ str }}" aria-controls="hoursbehindfilter">
        {{#pix}} i/previous {{/pix}} {{# str }} filter:hoursbehind, assessfreqreport_student_search {{/ str }}
        <span class="sr-only" data-active-item-text>
                {{# str }} filter:hours0, assessfreqreport_student_search {{/ str }}
                {{# str }} filter:hours1, assessfreqreport_student_search {{/ str }}
                {{# str }} filter:hours4, assessfreqreport_student_search {{/ str }}
                {{# str }} filter:hours8, assessfreqreport_student_search {{/ str }}
        </span>
    </button>
    <div id="hoursbehindfilter" role="menu" class="dropdown-menu" data-show-active-item>
        <h6 class="dropdown-header">{{# str }} filter:hoursbehind, assessfreqreport_student_search {{/ str }}</h6>
        <a
                class="dropdown-item {{#filters.hoursbehind}}{{#hours0}}active{{/hours0}}{{/filters.hoursbehind}}"
                href="#"
                data-metric="0"
                aria-label="{{# str }} filter:hours0, assessfreqreport_student_search {{/ str }}"
                role="menuitem"
        >
            {{# str }} filter:hours0, assessfreqreport_student_search {{/ str }}
        </a>
        <a
            class="dropdown-item {{#filters.hoursbehind}}{{#hours1}}active{{/hours1}}{{/filters.hoursbehind}}"
            href="#"
            data-metric="1"
            aria-label="{{# str }} filter:hours1, assessfreqreport_student_search {{/ str }}"
            role="menuitem"
        >
            {{# str }} filter:hours1, assessfreqreport_student_search {{/ str }}
        </a>
        <a
            class="dropdown-item {{#filters.hoursbehind}}{{#hours4}}active{{/hours4}}{{/filters.hoursbehind}}"
            href="#"
            data-metric="4"
            aria-label="{{# str }} filter:hours4, assessfreqreport_student_search {{/ str }}"
            role="menuitem"
        >
            {{# str }} filter:hours4, assessfreqreport_student_search {{/ str }}
        </a>
        <a
            class="dropdown-item {{#filters.hoursbehind}}{{#hours8}}active{{/hours8}}{{/filters.hoursbehind}}"
            href="#"
            data-metric="8"
            aria-label="{{# str }} filter:hours8, assessfreqreport_student_search {{/ str }}"
            role="menuitem"
        >
            {{# str }} filter:hours8, assessfreqreport_student_search {{/ str }}
        </a>
    </div>
</div>

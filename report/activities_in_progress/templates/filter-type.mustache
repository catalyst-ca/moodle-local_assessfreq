{{!
    @template assessfreqreport_activities_in_progress/filter-type

    This template renders the type filter.

    Example context (json):
    {}
}}
<div id="local-assessfreq-report-activities-in-progress-filter-type" data-region="type-filter" class="dropdown">
    <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
     data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{strselect}}" aria-controls="local-assessfreq-report-activities-in-progress-filter-type">
        {{#pix}} i/checked {{/pix}} {{# str }} filter:selectassessment, assessfreqreport_activities_in_progress {{/ str }}
        <span class="sr-only" data-active-item-text>
            {{#filters.modules}}
                {{#module}}{{name}}{{/module}}
            {{/filters.modules}}
        </span>
    </button>
    <div id="local-assessfreq-report-activities-in-progress-filter-type-filters" role="menu" class="dropdown-menu" data-show-active-item>
        <h6 class="dropdown-header">{{# str }} filter:selectassessment, assessfreqreport_activities_in_progress {{/ str }}</h6>
        {{#filters.modules}}
        <a
            class="dropdown-item {{#module}}{{#active}}active{{/active}}{{/module}}"
            href="#"
            data-module="{{#module}}{{val}}{{/module}}"
            aria-label="{{#module}}{{name}}{{/module}}"
            role="menuitem"
        >
            {{#module}}{{name}}{{/module}}
        </a>
        {{/filters.modules}}
        <div class="dropdown-divider"></div>
         <a
            class="dropdown-item"
            href="#"
            data-module="close"
            aria-label="{{# str }} filter:closeapply, assessfreqreport_activities_in_progress {{/ str }}"
            role="menuitem"
        >
            {{# str }} filter:closeapply, assessfreqreport_activities_in_progress {{/ str }}
        </a>
    </div>
</div>

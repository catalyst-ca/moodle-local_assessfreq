{{!
    @template assessfreqreport_heatmap/filters

    This template renders all of the filters.
}}

<div class="filters">
    <p>{{#str}}report:usage_guidlines, assessfreqreport_heatmap {{/str}}</p>
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-9">
                {{^iscourse}}
                    {{> assessfreqreport_heatmap/filter-year}}
                {{/iscourse}}
                {{> assessfreqreport_heatmap/filter-type}}
                {{> assessfreqreport_heatmap/filter-metric}}
            </div>
            <!-- Download -->
            <div class="col-3">
                {{> assessfreqreport_heatmap/download}}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-12">
                <h5>{{#str}}filter:yearselection, assessfreqreport_heatmap, {{month}} {{year}}{{/str}}</h5>
            </div>
            <div class="col-12">
                <h5>{{# str }} filter:moduleselection, assessfreqreport_heatmap, {{filters.selected_modules}} {{/ str }}</h5>
            </div>
            <div class="col-12">
                <h5>{{# str }} filter:metricselection, assessfreqreport_heatmap, {{filters.selected_metric}} {{/ str }}</h5>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-3 scales">{{#str}}report:scales, assessfreqreport_heatmap {{/str}} {{{scales}}}</div>
        </div>
    </div>
</div>

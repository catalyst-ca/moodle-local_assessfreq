{{!
    @template assessfreqreport_heatmap/dayview

    Render the dayview.

    Example context (json):
    {

    }
}}
<div id="local-assessfreq-report-dayview">
<table class="table table-bordered table-striped">
  <colgroup>
    <col class="dayview-firstcol">
    <col class="dayview-midcol">
    <col class="dayview-midcol">
    <col class="dayview-midcol">
    <col>
  </colgroup>
  <thead>
    <tr>
      <th scope="col" rowspan="2">{{# str }} overview:title, assessfreqreport_heatmap {{/ str }}</th>
      <th scope="col" rowspan="2" class="text-center">
        <span  data-toggle="tooltip" data-placement="top" title="{{#str}} overview:students, assessfreqreport_heatmap {{/str}}" data-offset="0,5">
          {{#pix}} i/cohort, core{{/pix}}
        </span>
      </th>
      <th scope="col" rowspan="2" class="text-center">
        <span  data-toggle="tooltip" data-placement="top" title="{{#str}} overview:timelimit, assessfreqreport_heatmap {{/str}}" data-offset="0,5">
          {{#pix}} i/calendareventtime, core{{/pix}}
        </span>
      </th>
       <th scope="col" rowspan="2" class="text-center">
        <span  data-toggle="tooltip" data-placement="top" title="{{#str}} overview:dashboard, assessfreqreport_heatmap {{/str}}" data-offset="0,5">
          {{#pix}} i/report, core{{/pix}}
        </span>
      </th>
      <th scope="col">{{# str }} overview:time, assessfreqreport_heatmap {{/ str }}</th>
    </tr>
     <tr>
      <th scope="col" class="local-assessfreq-flex-row">
        <div>00:00</div>
        <div>06:00</div>
        <div>12:00</div>
        <div>18:00</div>
        <div>23:59</div>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#rows}}
    <tr>
      <th class="course-name" scope="row">
        <div class="local-assessfreq-day-activity">
            <a href="{{url}}" target="_blank">{{name}}</a>
        </div>
        <div class="local-assessfreq-day-coursename">
            {{courseshortname}}
        </div>
      </th>
      <th scope="row" class="text-center">
        {{ usercount }}
      </th>
       <th scope="row" class="text-center">
        {{ timelimit }}
      </th>
      <th scope="row" class="text-center">
        {{#dashurl}} <a href="{{dashurl}}">{{#pix}} i/report, core{{/pix}}</a> {{/dashurl}}
        {{^dashurl}} {{#str}} overview:na, assessfreqreport_heatmap {{/str}} {{/dashurl}}
      </th>
      <td>
        <div class="local-assessfreq-day-period"
             style="margin-left: {{leftmargin}}%;width: {{width}}%;"
              data-toggle="tooltip" data-html="true" data-placement="top"
              title="<strong>{{#str}} overview:open, assessfreqreport_heatmap {{/str}}:</strong> {{start}}<br/>
                     <strong>{{#str}} overview:close, assessfreqreport_heatmap {{/str}}: </strong> {{end}}">
        </div>
      </td>
    </tr>
    {{/rows}}

  </tbody>
</table>
</div>

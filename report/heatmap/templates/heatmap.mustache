{{!
    @template assessfreqreport_heatmap/heatmap

    Report Summary template.

    Example context (json):
    {
        "rows": {
            "rows5": true,
            "rows10": false,
            "rows20": false
        }
    }
}}
<div id="local-assessfreq-report-heatmap">
    <!-- Filters -->
    {{> assessfreqreport_heatmap/filters}}
    <div class="row justify-content-center">
        {{#months}}
            <div class="col-xl-auto col-lg-6 col-md-12 col-sm-12">
                <div class="month-title"><strong>{{month}}</strong></div>
                {{{table}}}
            </div>
        {{/months}}
    </div>
    <div class="container-fluid">
        {{#overlays}}
        <div id="{{id}}" class="dialog-data">
            {{{data}}}
        </div>
        {{/overlays}}
    </div>
</div>

{{!
    @template assessfreqreport_heatmap/download

    Download template.
}}

<div class="download">
    <div class="col-sm d-flex justify-content-end">
        <form id="local-assessfreq-heatmap-form" method="get" action="/local/assessfreq/report/heatmap/download.php" class="dataformatselector m-1">
            <input type="hidden" name="sesskey" value="{{sesskey}}">
            <input type="hidden" name="courseid" value="{{courseid}}">
            {{#filters.years}}
                {{#year}}{{#active}}<input type="hidden" name="year" value="{{val}}">{{/active}}{{/year}}
            {{/filters.years}}
            <input type="hidden" name="metric" value="{{downloadmetric}}">
            {{#filters.modules}}
                {{#module}}{{#active}}<input type="hidden" name="modules[{{val}}]" value="{{val}}">{{/active}}{{/module}}
            {{/filters.modules}}
            <button  id="local-assessfreq-hide-report-btn" class="btn btn-secondary" type="submit">
                {{#pix}} t/download {{/pix}} {{# str }} download {{/ str }}
            </button>
        </form>
    </div>
</div>

{{!
    @template assessfreqsource_quiz/activity_dashboard

    Report Summary template.

    Example context (json):
    {

    }
}}
<div id="assessfreqsource-quiz-activity_dashboard">
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-10">
                <h3>{{{activity}}}</h3>
            </div>
            <div class="col-auto">
                <button  id="local-assessfreq-find-activity" class="btn btn-primary" type="button">
                    {{# str }} searchactivity, assessfreqreport_activity_dashboard {{/ str }}
                </button>
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="col-6 col-md-6 col-sm-12">
                {{{details}}}
            </div>
            <div class="col-6 col-md-6 col-sm-12">
                {{{summary}}}
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="col-12">
                {{{trend}}}
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="col-12">
                {{> local_assessfreq/table}}
            </div>
        </div>
    </div>
</div>

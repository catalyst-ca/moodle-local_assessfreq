{{!
    @template local_assessfreq/nav-year-filter

    This template renders the day range selector for the timeline view.

    Example context (json):
    {}
}}
<div id="local-assessfreq-heatmap-year" data-region="year-filter" class="dropdown">
    <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
     data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{strselect}}" aria-controls="local-assessfreq-cards-year-heat-filter">
        {{#pix}} i/duration {{/pix}} {{# str }} selectyear, local_assessfreq {{/ str }}
        <span class="sr-only" data-active-item-text>
            {{#years}}
                {{#year}}{{val}}{{/year}}
            {{/years}}
        </span>
    </button>
    <div id="local-assessfreq-cards-year-heat-filter" role="menu" class="dropdown-menu" data-show-active-item>
        <h6 class="dropdown-header">{{# str }} selectyear, local_assessfreq {{/ str }}</h6>
        {{#years}}
        <a
            class="dropdown-item {{#year}}{{#active}}active{{/active}}{{/year}}"
            href="#"
            data-year="{{#year}}{{val}}{{/year}}"
            aria-label="{{#year}}{{val}}{{/year}}"
            role="menuitem"
        >
            {{#year}}{{val}}{{/year}}
        </a>
        {{/years}}
    </div>
</div>

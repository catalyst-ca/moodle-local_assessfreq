{{!
    @template local_assessfreq/nav-year-filter

    This template renders the day range selector for the timeline view.

    Example context (json):
    {}
}}
<div id="local-assessfreq-heatmap-modules" data-region="year-filter" class="dropdown">
    <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
     data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{strselect}}" aria-controls="menudayfilter">
        {{#pix}} i/checked {{/pix}} {{# str }} selectassessment, local_assessfreq {{/ str }}
        <span class="sr-only" data-active-item-text>
            {{#modules}}
                {{#module}}{{name}}{{/module}}
            {{/modules}}
        </span>
    </button>
    <div id="local-assessfreq-heatmap-modules-filter" role="menu" class="dropdown-menu" data-show-active-item>
        <h6 class="dropdown-header">{{# str }} selectassessment, local_assessfreq {{/ str }}</h6>
        {{#modules}}
        <a
            class="dropdown-item {{#module}}{{#active}}active{{/active}}{{/module}}"
            href="#"
            data-module="{{#module}}{{val}}{{/module}}"
            aria-label="{{#module}}{{name}}{{/module}}"
            role="menuitem"
        >
            {{#module}}{{name}}{{/module}}
        </a>
        {{/modules}}
        <div class="dropdown-divider"></div>
         <a
            class="dropdown-item"
            href="#"
            data-module="close"
            aria-label="{{# str }} closeapply, local_assessfreq {{/ str }}"
            role="menuitem"
        >
            {{# str }} closeapply, local_assessfreq {{/ str }}
        </a>
    </div>
</div>

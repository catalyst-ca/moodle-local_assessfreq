{{!
    @template local_assessfreq/nav-year-filter

    This template renders the day range selector for the timeline view.

    Example context (json):
    {}
}}
<div id="local-assessfreq-inprogress-table-sort" data-region="sort-filter" class="dropdown mr-3">
    <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{strselect}}" aria-controls="local-assessfreq-inprogress-table-sort">
        {{#pix}} t/sort {{/pix}} {{# str }} sorttable, local_assessfreq {{/ str }}
        <span class="sr-only" data-active-item-text>
                {{# str }} numberassessments, local_assessfreq {{/ str }}
                {{# str }} numberstudents, local_assessfreq {{/ str }}
        </span>
    </button>
    <div id="local-assessfreq-inprogress-table-sort" role="menu" class="dropdown-menu">
        <h6 class="dropdown-header">{{# str }} sorttable, local_assessfreq {{/ str }}</h6>
        <a
            class="dropdown-item {{#sort}}{{#quizasc}}active{{/quizasc}}{{/sort}}"
            href="#"
            data-sort="name_asc"
            aria-label="{{# str }} quizasc, local_assessfreq {{/ str }}"
            role="menuitem"
        >
            {{# str }} quizasc, local_assessfreq {{/ str }}
        </a>
        <a
            class="dropdown-item {{#sort}}{{#quizdesc}}active{{/quizdesc}}{{/sort}}"
            href="#"
            data-sort="name_desc"
            aria-label="{{# str }} quizdesc, local_assessfreq {{/ str }}"
            role="menuitem"
        >
            {{# str }} quizdesc, local_assessfreq {{/ str }}
        </a>
        <a
            class="dropdown-item {{#sort}}{{#courseasc}}active{{/courseasc}}{{/sort}}"
            href="#"
            data-sort="coursefullname_asc"
            aria-label="{{# str }} courseasc, local_assessfreq {{/ str }}"
            role="menuitem"
        >
            {{# str }} courseasc, local_assessfreq {{/ str }}
        </a>
        <a
            class="dropdown-item {{#sort}}{{#coursedesc}}active{{/coursedesc}}{{/sort}}"
            href="#"
            data-sort="coursefullname_desc"
            aria-label="{{# str }} coursedesc, local_assessfreq {{/ str }}"
            role="menuitem"
        >
            {{# str }} coursedesc, local_assessfreq {{/ str }}
        </a>
    </div>
</div>

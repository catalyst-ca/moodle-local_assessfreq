{{!
    @template local_assessfreq/table-filter

    This template renders the generic filters for tables.

    Example context (json):
    {}
}}
<div class="col-5">
    <div class="input-group">
        <input id="{{table.id}}-table-search" type="text" class="form-control"
               placeholder="{{# str }} filter:entersearch, local_assessfreq {{/ str }}"
               aria-label="{{# str }} filter:entersearch, local_assessfreq {{/ str }}">
        <div class="input-group-append">
            <button id="{{table.id}}-table-search-reset"
                    class="btn btn-secondary" type="button">
                {{# str }} filter:reset, local_assessfreq {{/ str }}
            </button>
        </div>
    </div>
</div>
<div class="col-auto">
    <div id="{{table.id}}-table-rows" data-region="rows-filter">
        <button type="button" class="btn btn-secondary dropdown-toggle icon-no-margin"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                aria-label="{{# str }} filter:showrows, local_assessfreq {{/ str }}" aria-controls="rowsfilter">
            {{#pix}} i/group {{/pix}} {{# str }} filter:showrows, local_assessfreq {{/ str }}
            <span class="sr-only" data-active-item-text>
                    {{# str }} filter:rows20, local_assessfreq {{/ str }}
                    {{# str }} filter:rows50, local_assessfreq {{/ str }}
                    {{# str }} filter:rows100, local_assessfreq {{/ str }}
            </span>
        </button>
        <div id="rowsfilter" role="menu" class="dropdown-menu" data-show-active-item>
            <h6 class="dropdown-header">{{# str }} filter:showrows, local_assessfreq {{/ str }}</h6>
            <a
                class="dropdown-item {{#table.rows}}{{#rows20}}active{{/rows20}}{{/table.rows}}"
                href="#"
                data-metric="20"
                aria-label="{{# str }} filter:rows20, local_assessfreq {{/ str }}"
                role="menuitem"
            >
                {{# str }} filter:rows20, local_assessfreq {{/ str }}
            </a>
            <a
                class="dropdown-item {{#table.rows}}{{#rows50}}active{{/rows50}}{{/table.rows}}"
                href="#"
                data-metric="50"
                aria-label="{{# str }} filter:rows50, local_assessfreq {{/ str }}"
                role="menuitem"
            >
                {{# str }} filter:rows50, local_assessfreq {{/ str }}
            </a>
            <a
                class="dropdown-item {{#table.rows}}{{#rows100}}active{{/rows100}}{{/table.rows}}"
                href="#"
                data-metric="100"
                aria-label="{{# str }} filter:rows100, local_assessfreq {{/ str }}"
                role="menuitem"
            >
                {{# str }} filter:rows100, local_assessfreq {{/ str }}
            </a>
        </div>
    </div>
</div>
